{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",

        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
